{
  "compilerOptions": {
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "allowJs": true
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}