extends layout

block content
  h1 Sign up!
    form(
      action="/signup"
      method="post"
    )
      div.form-group
        input(
          placeholder="Username"
          id="name"
          name="name"
          class="form-control form-control-lg"
        )
      div.form-group
        input(
          type="password"
          placeholder="Password"
          name="password"
          id="password"
          class="form-control form-control-lg"
        )
      input(
        type="submit"
        class="btn btn-primary"
        value="let's roll"
      )