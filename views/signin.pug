extends layout

block content
  h1 Sign in!
    form(
      action="/signin"
      method="post"
    )
      div.form-group
        input(
          placeholder="Username"
          id="name"
          name="name"
          class="form-control form-control-lg"
        )
      if !session
        div.form-group
          input(
            type="password"
            placeholder="Password"
            name="password"
            id="password"
            class="form-control form-control-lg"
          )
        input(
          type="submit"
          class="btn btn-primary"
          value="Sign me in broski!"
        )